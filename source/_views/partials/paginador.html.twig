<ul class="pager">
    {% if page.pagination.next_page %}
        <li class="previous">
            <a href="{{ site.url }}{{ page.pagination.next_page.url }}/">&larr; Posts antics</a>
        </li>
    {% else %}
        <li class="previous disabled">
            <span>&larr; Posts antics</span>
        </li>
    {% endif %}
    {% if page.pagination.previous_page %}
        <li class="next">
            <a href="{{ site.url }}{{ page.pagination.previous_page.url }}/">Posts més nous &rarr;</a>
        </li>
    {% else %}
        <li class="next disabled">
            <span>Posts més nous &rarr;</span>
        </li>
    {% endif %}
</ul>